@model MovieMasterProject.Actor
@Scripts.Render("~/bundles/jquery")
@using MovieMasterProject.Models;
<h2>Director Details</h2>


<div class="col-lg-12">
    <br />

    <div class="roundedSquare" style="height:auto;">
        <center>
            <div class="containerrow">
                @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
            </div>
        </center>

        <div class="row2" style="overflow:hidden">

            <div class="roundedDetails" style="float:left;">

                <table cellspacing="10">
                    <tr><th>Actor</th><td>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</td></tr>
                    <tr>
                        <th>Cast</th>
                        <td>@Html.ActionLink("Add", "Create", "MovieActors") or @Html.ActionLink("Delete", "Index", "MovieActors")</td>
                    </tr>

                </table>

            </div>

            <div id="mySlider" class="carousel slide" style="width:50%; float:left">
                <ol class="carousel-indicators">
                    <li data-target="#mySlider" data-slide-to="0" class="active"></li>
                    <li data-target="#mySlider" data-slide-to="1"></li>
                    <li data-target="#mySlider" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item active">
                        <img alt="First slide" src="~/Content/img/image9.jpg" style="margin:0 auto" />
                    </div>
                    <div class="item">
                        <img alt="Second slide" src="~/Content/img/image10.jpg" style="margin:0 auto" />
                    </div>
                    <div class="item">
                        <img alt="second slide" src="~/Content/img/image11.jpg" style="margin:0 auto" />
                    </div>
                </div>
                <a class="left carousel-control" href="#mySlider" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
                <a class="right carousel-control" href="#mySlider" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
            </div>
        </div>

        <br />
        <div class="row3" style="float:left;">
            <center>

                @using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                { @Html.AntiForgeryToken() <fieldset><div class="editor-field"> @Html.TextBox("file", "", new { type = "file" }) </div> <div class="editor-field"> <input type="submit" value="Upload" /> </div> </fieldset> }
            </center>
        </div>


        <script>
            $(function () {
                $('.toggler').click(function () {
                    $(this).find('div').slideToggle();
                });
            });
        </script>


        <div class="roundedBox toggler">
            <h5>Director Bio </h5><div>
                @Html.DisplayFor(model => model.Bio)
            </div>
        </div>

        <div class="roundedBox toggler">
            <h5>Actor Comments - @Html.ActionLink("Add Comment", "Create", "CommentAs")</h5>
            <div>
                @foreach (var item in Model.MessageBoardA.CommentAs)
                {

                    <div class="borderclass" style="overflow:initial;height:auto;">
                        <input type="button" value="Delete" class="btn btn-xs" onclick="window.location.href='@Url.Action("Delete", "CommentA", new { id=item.CommentId })' " />
                        @Html.DisplayFor(model => item.UserName):
                        @Html.DisplayFor(model => item.CommentContents)
                    </div>
                }
            </div>
        </div>

        <div class="buttonrow">

            <input type="button" value="Edit" class="btn btn-group-xs" onclick="window.location.href='@Url.Action("Edit", "Actor", new { id=Model.ActorId })' " />

        </div>
    </div>

</div>


@Html.ActionLink("Back to List", "Index")
</p>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ActorId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
