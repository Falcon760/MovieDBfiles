@{
    ViewBag.Title = "Home Page";
}
@using MovieMasterProject.Models;
@Scripts.Render("~/bundles/jquery")


<div class="col-lg-12">


    <div class="roundedSquare">
        <div class="containerrow">
            Movie Title in Yellow
        </div>
        <div class="roundedHead toggler">
            Movie Details
            <div>
            <table align="center" cellpadding="20" style="text-align:center">
                <tr>
                    <td>
                        <h4>Release Date</h4>
                    </td>
                    <td>
