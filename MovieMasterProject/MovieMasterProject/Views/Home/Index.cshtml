@{
    ViewBag.Title = "Home Page";

}

<br /> <br />
<div class="container2">
    <div class="jumbotron" style="border: groove; border-color:rgb(105, 19, 19);">
        <center>
            <h1><img src="~/Content/images/movienerdslg.png" /></h1>
            <p>Your #1 source for premium movie and video reviews. Sign up for free to add your movie reviews today.</p>

            @if (User.Identity.IsAuthenticated != true)
            {
                <a class="btn btn-info" onclick="window.location.href='@Url.Action("Register","Account")' ">Join Now!</a>
            }
        </center>

    </div>
</div>
<div class="row2" style="text-align:center;">
    The Latest Trailers
</div>


<br />

<div class="buttonrow">


    <div class="VideoBox">
        <div style="float:left">
            G of G 2014
            <iframe width="225" height="250"
                    src="//www.youtube.com/embed/aHUBlv5_K8Y" frameborder="0"></iframe>
            <input type="button" value="Upload" class="btn btn-danger" />
        </div>
    </div>

    <div class="VideoBox">
        <div style="float:left">
            Let's Be Cops
            <iframe width="225" height="250"
                    src="//www.youtube.com/embed/WM_OkdRElrI" frameborder="0" allowtransparency="true"></iframe>
            <input type="button" value="Upload" class="btn btn-danger" />
        </div>
    </div>
    <div class="VideoBox">
        <div style="float:left">
            Sin City 2
            <iframe width="225" height="250"
                    src="//www.youtube.com/embed/HE-RvfaQKBY" frameborder="0" allowtransparency="false"></iframe>
            <input type="button" value="Upload" class="btn btn-danger" />
        </div>
    </div>
</div>


<div style="float:left;text-align:center;" class="row3">

    <div class="span8">
        <center>
            <div id="slider" class="carousel slide">

                <div class="carousel-inner">

                    <div class="item">
                        <img src="~/Content/images/LetsBeCops.jpg">

                        <div class="carousel-caption">
                            <h4>Headline for image</h4>
                            <p>Description of image here</p>

                        </div>

                    </div>

                    <div class="item">
                        <img src="~/Content/images/GaurdiansOtheGlxy.jpg">

                        <div class="carousel-caption">
                            <h4>Headline for image</h4>
                            <p>Description of image here</p>

                        </div>

                    </div>

                    <div class="item active">
                        <img src="~/Content/img/turtles.jpg">

                    <div class="carousel-caption">
                        <h4>TURTLE POWER</h4>
                        <p>The city needs heroes. An unlikely ban of mutated turtles and a giant rat fight
                        Shredder and his evil clan in filthy New York!</p>

                        </div>


                    </div>

                </div>
                <a class="left carousel-control" href="#slider" data-slide="prev">&lsaquo;</a>
                <a class="right carousel-control" href="#slider" data-slide="next">&rsaquo;</a>
            </div>
            </div>
        </center>
    </div>
</div>

<div class="footer">
    <br /><br /><br /><br />

</div>



























